@model w6.Models.UserEditViewModel

      <div class="row">

        <div class="col-md-6">

@if (Model.Salvato) {
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> Salvato</h4>
            Salvato.
          </div>
}

          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Quick Example</h3>
            </div>

            <form role="form" method="POST">
              <div class="box-body">
                <div class="form-group">
                  <label for="myform-nome">Nome</label>
                  <input name="nome" type="text" id="myform-nome" class="form-control" placeholder="Il tuo nome" value="@Model.Nome">
                </div>
                <div class="form-group">
                  <label for="myform-eta">Eta'</label>
                  <input name="eta" type="text" id="myform-eta" class="form-control" placeholder="La tua eta'" value="@Model.Eta">
                </div>
                <div class="checkbox">
                  <label>
                    <input name="sportiva" type="checkbox" value="true" checked="@Model.Sportiva"> Sportiva
                  </label>
                </div>
              </div>

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Invia</button>
              </div>
            </form>
          </div>
        </div>
      </div>

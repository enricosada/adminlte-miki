@model w6.Models.PersonaListaViewModel



<div class="box">
            <div class="box-header">
              <h3 class="box-title">Lista Personale</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table table-striped">
                <tbody><tr>
                  <th style="width: 10px">Id</th>
                  <th>Nome Completo</th>
                </tr>
                @foreach (var item in Model.Persone)
                {
                     <tr>
                        <td>@item.Id</td>
                        <td>
                            <a href="@Url.Action("Info", "Persone", new { id = item.Id }  )">@item.FullName</a>
                             
                        </td>
                         
                     </tr>
                }
              </tbody></table>
            </div>
            <!-- /.box-body -->
          </div>